{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": "cd functions || true && yarn && yarn build"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
